# .env.example
# Copy this file to .env and fill in your actual API keys.

# Google Gemini API Key (AI brain)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (optional alternative AI)
OPENAI_API_KEY=your_openai_api_key_here

# Twilio credentials (SMS support)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Gmail API Key
GMAIL_API_KEY=your_gmail_api_key_here

# Security PIN (protects destructive commands: shutdown, restart)
# When set, STARK will ask for this PIN before executing destructive actions.
# Leave blank / unset to disable the security guard (not recommended).
STARK_SECURITY_PIN=
